.chime-flex.chime-flex-vertical
	#loading.chime-flex-1.text-center
		span.glyphicon.glyphicon-cloud-download
	#widget.chime-flex-1.chime-flex.chime-flex-center.media.hidden
		img#track-cover.media-object(src='data:image/png;base64,')
		#track.media-body
			h3.media-heading.text-overflow
				span#track-title
			h4.text-overflow
				span#track-artist
	#controls.chime-flex-1.chime-flex.chime-flex-vertical.chime-flex-center.hidden
		input#range-control(type='range', min='0', value='0', max='100', step='1')
		#controls-buttons.chime-flex
			.btn-group
				button.btn.btn-default(type='button', title=i18n('pages_player_rewind'), data-command='rewind')
					span#rewind-icon.glyphicon.glyphicon-backward
				button.btn.btn-default(type='button', title=i18n('pages_player_play'), data-command='play-pause')
					span#play-icon.glyphicon
				button.btn.btn-default(type='button', title=i18n('pages_player_forward'), data-command='forward')
					span#forward-icon.glyphicon.glyphicon-forward
			.btn-group
				button.btn.btn-default(type='button', title=i18n('pages_player_shuffle'), data-command='shuffle')
					span#shuffle-icon.glyphicon.glyphicon-random.disabled
				button.btn.btn-default(type='button', title=i18n('pages_player_repeat'), data-command='repeat')
					span#repeat-icon.glyphicon.glyphicon-retweet.disabled
			#length-screen.chime-flex.chime-flex-center
				span#position-value 0:00
				| /
				span#duration-value 0:00