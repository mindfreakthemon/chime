.text-overflow {
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}

for i in 1..10
	.chime-flex-{i} {
		flex: i;
	}

.chime-flex {
	display: flex;
	align-items: stretch;
	justify-content: center;
}

.chime-flex-vertical {
	flex-direction: column;
	width: 100%;
}

.chime-flex-center {
	align-items: center;
}