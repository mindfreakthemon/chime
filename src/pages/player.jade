doctype html
html
	head
		title Chime Player
		link(rel='stylesheet', type='text/css', href='../vendor/bootstrap/css/bootstrap-theme.min.css')
		link(rel='stylesheet', type='text/css', href='../vendor/bootstrap/css/bootstrap.min.css')
		link(rel='stylesheet', type='text/css', href='../styles/player.css')
		script(src='../js/misc/utils.js')
		script(data-main='../js/player/main.js', src='../vendor/requirejs/js/require.js')
	body
		.flex.flex-vertical
			#loading.flex-1.text-center
				span.glyphicon.glyphicon-cloud-download
			#widget.flex-1.flex.flex-center.media.hidden
				img#track-cover.media-object(src='data:image/png;base64,')
				#track.media-body
					h3.media-heading.text-overflow
						span#track-title
					h4.text-overflow
						span#track-artist
			#controls.flex-1.flex.flex-vertical.flex-center.hidden
				input#range-control(type='range', min='0', value='0', max='100', step='1')
				#controls-buttons.flex
					.btn-group
						button.btn.btn-default(type='button', title='Rewind', data-command='rewind')
							span#rewind-icon.glyphicon.glyphicon-backward
						button.btn.btn-default(type='button', title='Play', data-command='play-pause')
							span#play-icon.glyphicon
						button.btn.btn-default(type='button', title='Forward', data-command='forward')
							span#forward-icon.glyphicon.glyphicon-forward
					.btn-group
						button.btn.btn-default(type='button', title='Shuffle', data-command='shuffle')
							span#shuffle-icon.glyphicon.glyphicon-random.disabled
						button.btn.btn-default(type='button', title='Repeat', data-command='repeat')
							span#repeat-icon.glyphicon.glyphicon-retweet.disabled
					#length-screen.flex.flex-center
						span#position-value 0:00
						| /
						span#duration-value 0:00
