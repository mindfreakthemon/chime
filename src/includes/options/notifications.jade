section
	h3= i18n('includes_options_notifications_enable')
	article
		.alert.row
			| #{i18n('includes_options_notifications_enable_desc_1')} #{''}
			span.image
				abbr= i18n('includes_options_notifications_enable_desc_2')
				image(src='/images/notifications.png')
	article
		label.form-control-static
			input(type='checkbox', name='notify_enabled')
			= i18n('includes_options_notifications_notify_enable')
		br
		label.form-control-static
			input(type='checkbox', name='notify_resumed')
			= i18n('includes_options_notifications_notify_resumed')
		br
		label.form-control-static
			input(type='checkbox', name='notify_playing')
			= i18n('includes_options_notifications_notify_playing')
		br
		label.form-control-static
			input(type='checkbox', name='notify_paused')
			= i18n('includes_options_notifications_notify_paused')
		br
		label.form-control-static
			input(type='checkbox', name='notify_seeking')
			= i18n('includes_options_notifications_notify_seeking')
		br
		label.form-control-static
			input(type='checkbox', name='notify_stopped')
			= i18n('includes_options_notifications_notify_stopped')
		br
		label.form-control-static
			input(type='checkbox', name='notify_finished')
			= i18n('includes_options_notifications_notify_finished')
		br
		label.form-control-static
			input(type='number', min=1000, max=10000, step=100, name='notify_timeout')
			= i18n('includes_options_notifications_notify_timeout')
