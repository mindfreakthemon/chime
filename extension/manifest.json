{
	"manifest_version": 2,
	"name": "Chime",
	"version": "0.0.6",
	"author": "Monday Freelem <mfthemon@gmail.com>",
	"description": "Adds new features to Google Music Web Player",
	"icons": {
		"128": "images/icon.png"
	},

	"browser_action": {
		"default_icon": "images/icon.png",
		"default_title": "Chime",
		"default_popup": "popup/popup.html"
	},

	"permissions": [
		"storage",
		"tabs",
		"notifications",
		"nativeMessaging",
		"background",
		"*://play.google.com/music/*",
		"*://www.last.fm/api/*",
		"*://ws.audioscrobbler.com/2.0/*",
		"*://*.google.com/*",
		"*://*.songlyrics.com/*",
		"*://*.metrolyrics.com/*"
	],

	"options_page": "options/options.html",

	"background": {
		"scripts": [
			"scripts/utils.js",
			"scripts/settings.js",
			"scripts/tab.js",
			"background/js/listeners.js",
			"background/js/background.js"
		],
		"persistent": true
	},

	"content_scripts": [
		{
			"matches": ["*://play.google.com/music/listen*"],
			"css": [
				"content/css/content.css"
			],
			"js": [
				"scripts/utils.js",
				"scripts/settings.js",
				"scripts/scrobbling.js",
				"content/js/events.js",
				"content/js/content.js",
				"content/js/notifications.js",
				"content/js/scrobbling.js",
				"content/js/lyrics.js"
			]
		}
	],

	"web_accessible_resources": [
		"content/html/lyrics.html"
	],

	"commands": {
		"click:play-pause": {
			"suggested_key": {
				"default": "Ctrl+Shift+I"
			},
			"description": "Toggle Play/Pause state"
		},
		"click:forward": {
			"suggested_key": {
				"default": "Ctrl+Shift+U"
			},
			"description": "Select next track"
		},
		"click:rewind": {
			"suggested_key": {
				"default": "Ctrl+Shift+Y"
			},
			"description": "Select previous track"
		},
		"_execute_browser_action": {
			"suggested_key": {
				"default": "Ctrl+Shift+F"
			}
		}
	}
}

