{
	"manifest_version": 2,
	"name": "Chime",
	"version": "0.0.7",
	"author": "Monday Freelem <mfthemon@gmail.com>",
	"description": "Adds new features to Google Music Web Player",
	"icons": {
		"128": "images/icon.png"
	},

	"minimum_chrome_version": "35.0.1916.114",

	"permissions": [
		"storage",
		"tabs",
		"background",
		"notifications",
		"http://*/*",
		"https://*/*"
	],

	"optional_permissions": [
		"http://*/*",
		"https://*/*"
	],

	"background": {
		"scripts": ["js/messenger.js"],
		"persistent": false
	},

	"options_page": "pages/options.html",

	"content_scripts": [{
		"matches": ["*://play.google.com/music/listen*"],
		"css": [
			"styles/content.css"
		],
		"js": [
			"js/misc/utils.js",
			"vendor/requirejs/require.js",
			"js/content/main.js"
		],
		"run_at": "document_end"
	}],

	"web_accessible_resources": [
		"js/*.js",
		"js/*.jade",
		"vendor/*.js",
		"styles/*.css"
	]
}

