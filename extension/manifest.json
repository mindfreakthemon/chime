{
	"manifest_version": 2,
	"name": "Chime",
	"version": "0.0.2",
	"author": "Monday Freelem <mfthemon@gmail.com>",
	"description": "Adds new features to Google Music Web Player",
	"icons": {
		"128": "images/icon.png"
	},

	"browser_action": {
		"default_icon": "images/icon.png",
		"default_title": "Chime",
		"default_popup": "popup.html"
	},

	"permissions": [
		"tabs",
		"notifications",
		"nativeMessaging",
		"background",
		"*://play.google.com/music/*",
		"*://www.last.fm/api/*",
		"*://ws.audioscrobbler.com/2.0/"
	],

	"options_page": "options.html",

	"background": {
		"scripts": [
			"lib/md5.js",
			"scripts/utils.js",
			"scripts/settings.js",
			"scripts/background/music_tab.js",
			"scripts/background/notifies.js",
			"scripts/background/scrobbling.js",
			"scripts/background/listeners.js",
			"scripts/background/background.js"
		],
		"persistent": true
	},

	"commands": {
		"click:play-pause": {
			"suggested_key": {
				"default": "Ctrl+Shift+I"
			},
			"description": "Toggle Play/Pause state"
		},
		"click:forward": {
			"suggested_key": {
				"default": "Ctrl+Shift+U"
			},
			"description": "Select next track"
		},
		"click:rewind": {
			"suggested_key": {
				"default": "Ctrl+Shift+Y"
			},
			"description": "Select previous track"
		},
		"_execute_browser_action": {
			"suggested_key": {
				"default": "Ctrl+Shift+F"
			}
		}
	}
}

